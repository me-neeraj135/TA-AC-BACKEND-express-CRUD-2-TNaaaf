<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Books</title>
  </head>
  <body style="background-color: #131325 ;">
    <header class="formHeader">
      <nav class="container headerNav">
        <ul>
          <li>
            <button>
              <a href="/books/new">add book</a>
            </button>
          </li>
         
          <li>
           
            <button>
              <a href="/">back</a>
            </button>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <ul class=" booksUl container">

<% if(books.length){%>

  
  <form  action="/books/search"  method="post" >
    <select  style="width: 10rem;"  name="title" id="title"   aria-placeholder="search by category" >
      <option value="" disabled selected >search by book name</option>
      <% uniqueTitle.forEach(t=>{%>
      <option value="<%= t %>">  <%= t %></option>
    <%}) %>
  </select>
  <input type="submit" value="search">
</form>
<br>

<form action="/books/search" method="post">
  <select  style="width: 10rem;"  name="category" id="category"   aria-placeholder="search by category">
    <option value="" disabled selected >search by Category</option>
    <% uniqueCategory.forEach(c =>{%>
      <option value="<%= c %>">  <%= c %></option>
      <%}) %>
    </select>
    <input type="submit" value="search">
  </form>
<br>

 
 <h1>all books</h1>
<% books.forEach( book=> {%>
  <li class="">
           <figure>
              <img
                src="/images/<%= book.image %>"
                alt="book"
              />
            </figure>
            <div class="booksSummary">
              <p><%= book.summary.slice(0,100) %>...</p>
              <br />
              <h3><%= book.author.name %></h3>
              <button>
                <a href="/books/<%= book.id %>">show</a>
              </button>
             
            </div>
          </div>
      </li>
      <%})%>

<%} else{%>
  <h2 style="font-size: 2rem; color:gray; text-align: center; ">no book presents</h2>

<%}%>
 </ul>
     
  </main>
  </body>
</html>
